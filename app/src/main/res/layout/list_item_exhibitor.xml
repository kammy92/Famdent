<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:gravity="center_vertical">


    <ImageView
        android:id="@+id/ivExhibitorLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_list"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivExhibitorLogo"
        android:layout_toLeftOf="@+id/ivRight"
        android:layout_toRightOf="@+id/ivExhibitorLogo"
        android:layout_toStartOf="@+id/ivRight"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvExhibitorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXHIBITOR L"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvHallNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExhibitorName"
            android:text="Hall 1"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"/>

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvHallNumber"
            android:layout_alignTop="@id/tvHallNumber"
            android:layout_marginLeft="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_small"
            android:layout_toEndOf="@id/tvHallNumber"
            android:layout_toRightOf="@+id/tvHallNumber"
            android:background="@color/app_text_color"/>

        <TextView
            android:id="@+id/tvStallNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExhibitorName"
            android:layout_toEndOf="@id/view1"
            android:layout_toRightOf="@+id/view1"
            android:text="Stall 10"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/activity_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_right"
        android:visibility="visible"/>


</RelativeLayout>