<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        card_view:cardCornerRadius="5dp"
                                        card_view:cardElevation="5dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rr2">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/doctor"
                android:id="@+id/ivSpeaker"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rr3"
                android:layout_alignTop="@+id/ivSpeaker"
                android:layout_alignBottom="@+id/ivSpeaker"
                android:layout_toRightOf="@+id/ivSpeaker"
                android:layout_toEndOf="@+id/ivSpeaker"
                android:layout_toLeftOf="@+id/ivSpeaker"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr.Rahul Jain"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/tvProgrammerName"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BDS, MDS - Oral and Maxillofacial Surgery"
                    android:textSize="15sp"
                    android:id="@+id/tvEducation"
                    android:layout_below="@id/tvProgrammerName"
                    android:paddingTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience:"
                    android:textSize="15sp"
                    android:id="@+id/tvExp"
                    android:layout_below="@id/tvEducation"
                    android:paddingTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 Years"
                    android:textSize="15sp"
                    android:layout_below="@+id/tvEducation"
                    android:layout_toRightOf="@+id/tvExp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="5dp"/>


            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>