<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:visibility="visible">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar1"
                style="@style/Widget.MyApp.ActionBar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@color/colorPrimary">
                <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back"
                        android:visibility="visible"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/activity_exhibitor_detail_title"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_extra_large"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/ivFavourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_star_border"
                        android:visibility="visible"/>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/ivLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin_small"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/tvExhibitorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivLocation"
                        android:layout_alignTop="@+id/ivLocation"
                        android:layout_toEndOf="@+id/ivLocation"
                        android:layout_toRightOf="@+id/ivLocation"
                        android:gravity="center_vertical"
                        android:text="3M INDIA LIMITED"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvFullAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvExhibitorName"
                        android:layout_toEndOf="@+id/ivLocation"
                        android:layout_toRightOf="@+id/ivLocation"
                        android:text="3M Space Division, Concord block, UB city 24, Vittal Mallya Road, New Delhi 110075, India "
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_medium"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_below="@+id/rlAddress">
                    <ImageView

                        android:id="@+id/ivPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin_small"
                        android:src="@drawable/ic_phone"/>

                    <TextView
                        android:id="@+id/tvContactNumber1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ivPhone"
                        android:layout_toRightOf="@+id/ivPhone"
                        android:gravity="center_vertical"
                        android:text="+91-8527875036"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_medium"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_below="@id/rlPhone"
                >
                    <ImageView
                        android:id="@+id/ivEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin_small"
                        android:src="@drawable/ic_email"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ivEmail"
                        android:layout_toRightOf="@+id/ivEmail"
                        android:gravity="center_vertical"
                        android:text="Rahuljain_35@yahoo.com"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_medium"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_below="@id/rlEmail">


                    <ImageView
                        android:id="@+id/ivWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin_small"
                        android:src="@drawable/ic_website"/>

                    <TextView
                        android:id="@+id/tvWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ivWebsite"
                        android:layout_toRightOf="@+id/ivWebsite"
                        android:gravity="center_vertical"
                        android:text="www.actiknow.com"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/text_size_medium"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAddNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/activity_margin"
            android:src="@drawable/ic_note"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>