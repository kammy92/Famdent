<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProgrammeLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/activity_margin"
        android:src="@drawable/ic_list"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_toEndOf="@id/ivProgrammeLogo"
        android:layout_toLeftOf="@+id/ivRight"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivProgrammeLogo"
        android:layout_toStartOf="@+id/ivRight"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvProgrammeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROGRAM NAME"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
        />
        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProgrammeName"
            android:text="Doctor Name"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"/>


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDoctorName"
            android:text="27/04/2017"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"/>


        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvDate"
            android:layout_alignTop="@id/tvDate"
            android:layout_marginLeft="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_small"
            android:layout_toEndOf="@id/tvDate"
            android:layout_toRightOf="@+id/tvDate"
            android:background="@color/app_text_color"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDoctorName"
            android:layout_toRightOf="@+id/view1"
            android:layout_toEndOf="@+id/view1"
            android:text="15:02"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/activity_margin"
        android:src="@drawable/ic_right"
        android:visibility="visible"/>


</RelativeLayout>